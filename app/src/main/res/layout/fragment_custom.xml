<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@id/custom_frag_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal">

        <RadioButton
            android:id="@id/custom_frag_radiobutton_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="推荐"
            android:layout_margin="3dp"
            android:background="@drawable/custom_selector"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@id/custom_frag_radiobutton_custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:layout_margin="3dp"
            android:background="@drawable/custom_selector"
            android:text="订阅"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@id/custom_frag_radiobutton_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="历史"
            android:layout_margin="3dp"
            android:background="@drawable/custom_selector"
            android:textColor="@color/black" />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@id/custom_frag_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>